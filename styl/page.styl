chart-background()
    background:url("../img/charttype.png") no-repeat
body
    padding-top: 60px
    padding-bottom: 40px
.chart-types
    width: 400px
    margin: 0 auto
    li
        margin-left:30px
        i
            width:32px
            height:32px
            display: inline-block
            chart-background()
        .line
            i
                background-position:0 -110px
        .bar
            i
                background-position: 0 -54px
        .pie 
            i
                background-position: 0 0
        .timeline
            i
                background-position: -3px -168px
#chart-type-switch-modal
    margin:-160px 0 0 -280px
#flash-container
    position:fixed
.inline 
    white-space:nowrap
.color-input
    width:60px
    color:#444
.bee
    background:url("../img/charttype.png") no-repeat 0 -235px
    width:40px
    height:40px
.navbar-fixed-top
    .bee
        background-position:0 -230px
#loading-modal
    width:120px
    height:120px
    margin:-120px 0 0 -60px
    overflow:hidden
    .modal-body
        padding:0
        overflow:hidden
        width:120px
        height:120px
        position:relative
    .loading-txt
        position:absolute
        top:50px
        left:28px
    .circle
        margin:15px
        width:90px
        height:90px
        -webkit-animation-iteration-count: infinite
        -webkit-animation-timing-function: linear
        -webkit-animation-name: orbit
        -moz-animation-iteration-count: infinite
        -moz-animation-timing-function: linear
        -moz-animation-name: orbit
        -webkit-animation-duration:2s
        
@-webkit-keyframes orbit
    from 
        -webkit-transform:rotate(0deg)
    to  
        -webkit-transform:rotate(360deg)
